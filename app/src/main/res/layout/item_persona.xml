<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_height="100dp"
            app:srcCompat="@drawable/images"
            android:id="@+id/imgPersona"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:layout_width="100dp"
            tools:layout_width="100dp"
            tools:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtEdadPersona"
            android:layout_below="@+id/txtApellidoPersona"
            android:layout_alignLeft="@+id/txtApellidoPersona"
            android:layout_alignStart="@+id/txtApellidoPersona" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtNombrePersona"
            android:layout_marginLeft="78dp"
            android:layout_marginStart="78dp"
            android:layout_marginTop="34dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imgPersona"
            android:layout_toEndOf="@+id/imgPersona" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtApellidoPersona"
            android:layout_below="@+id/txtNombrePersona"
            android:layout_alignLeft="@+id/txtNombrePersona"
            android:layout_alignStart="@+id/txtNombrePersona" />

    </RelativeLayout>

</LinearLayout>